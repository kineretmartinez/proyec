<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Bienestar Social</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.2.0/dist/chartjs-plugin-datalabels.min.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

  <style>
    body {
      background-color: #9f2241;
      color: white;
    }
    .card {
      background-color: white;
      color: black;
      border-radius: 15px;
    }
    .logo {
      height: 60px;
    }
    #map {
      height: 400px;
      border-radius: 10px;
    }
    .nav-link {
      color: #fbf9f9;
      background: #bca986; 
      margin-right: 5px;
    }
    .nav-link.active {
      background: #9f2241 !important;
      color: white !important;
    }
    .offcanvas-header {
      background-color: #9f2241;
      color: white;
    }
    .menu-btn {
      background-color: #ffc107;
      color: #212529;
      font-weight: bold;
      border: none;
    }
  </style>
</head>

<body class="p-3">
  <!-- Encabezado principal -->
  <header class="mb-4">
    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-4 shadow">
      <div class="d-flex gap-3 align-items-center">
        <img src="https://campeche.gob.mx/wp-content/uploads/2023/04/logoh.png" alt="Gobierno de Campeche" class="logo">
      </div>
      
      <div class="d-flex flex-column align-items-center me-auto ms-auto text-dark">
        <h1>ICCDSC</h1>
        <h3>Indicador clave de comportamiento de la dimensión de Sociedad y Cultura</h3>
      </div>

      <!-- Botón de menú lateral -->
      <button class="btn btn-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#menuAdmin" aria-controls="menuAdmin">
        Menú
      </button>
    </div>
  </header>

  <!-- Menú lateral desplegable -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="menuAdmin" aria-labelledby="menuAdminLabel">
    <div class="offcanvas-header">
      <h5 id="menuAdminLabel">Opciones</h5>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
    </div>
    <div class="offcanvas-body">
      <ul class="list-group">
        <% if (typeof user !== 'undefined' && user.rol === 'admin') { %>
          <li class="list-group-item">
            <a href="/admin/usuarios" class="text-decoration-none text-dark fw-bold">
              🔧 Panel Admin
            </a>
          </li>
        <% } %>
        <% if (typeof user !== 'undefined' && (user.rol === 'admin' || user.rol === 'usuario_tecnico')) { %>
            <li class="list-group-item">
                <a href="/admin/carga-datos" class="text-decoration-none text-dark fw-bold">
                 📊 Carga de Datos
                </a>
           </li>
        <% } %>
        <li class="list-group-item">
          <a href="/" class="text-decoration-none text-dark fw-bold">
            🏠 Volver al Dashboard
          </a>
        <li class="list-group-item">
          <a href="/logout" class="text-decoration-none text-danger fw-bold">
            🚪 Cerrar Sesión
          </a>
        </li>
        <li class="list-group-item">
          <label for="filtroAno" class="form-label fw-bold">📅 Año:</label>
          <select id="filtroAno" class="form-select">
            <option value="2025">2025</option>
            <option value="2024">2024</option>
            <option value="2023">2023</option>
            <option value="2022">2022</option>
            <option value="2021">2021</option>
            <option value="2020">2020</option>
          </select>
        </li>
      </ul>
    </div>
  </div>
    </header>

    <main class="container mt-4">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active shadow-lg" id="pulso-tab" data-bs-toggle="tab" data-bs-target="#pulso" type="button" role="tab" aria-controls="pulso" aria-selected="true">Pulso Social</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link shadow-lg" id="educacion-cultura-tab" data-bs-toggle="tab" data-bs-target="#educacion-cultura" type="button" role="tab" aria-controls="educacion-cultura" aria-selected="false">Educación y Cultura</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link shadow-lg" id="salud-bienestar-tab" data-bs-toggle="tab" data-bs-target="#salud-bienestar" type="button" role="tab" aria-controls="salud-bienestar" aria-selected="false">Salud y Bienestar</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link shadow-lg" id="inclusion-vivienda-seguridad-tab" data-bs-toggle="tab" data-bs-target="#inclusion-vivienda-seguridad" type="button" role="tab" aria-controls="inclusion-vivienda-seguridad" aria-selected="false">Inclusión, Vivienda y Seguridad</button>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="pulso" role="tabpanel" aria-labelledby="pulso-tab">
                <div class="row mt-4">
                    <div class="card shadow-lg p-4 mb-4">
                        <h4 class="text-center mb-3">Bienestar Social - Campeche</h4>
                        <canvas id="radarChart" height="200"></canvas>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="card text-center p-3 shadow-lg">
                                <h5>Esperanza de Vida</h5>
                                <h2><%= indicadores.esperanza_de_vida %> años</h2>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center p-3 shadow-lg">
                                <h5>Tasa de Alfabetización</h5>
                                <h2><%= indicadores.tasa_alfabetizacion %>%</h2>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center p-3 shadow-lg">
                                <h5>Pobreza Estatal</h5>
                                <h2><%= indicadores.pobreza_estatal %>%</h2>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center p-3 shadow-lg">
                                <h5>Policías por 100k hab.</h5>
                                <h2><%= indicadores.policias_por_habitante %></h2>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-lg p-4">
                        <h4 class="text-center mb-3">Mapa de Acceso a Servicios</h4>
                        <div id="map"></div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="educacion-cultura" role="tabpanel" aria-labelledby="educacion-cultura-tab">
                <div class="row mt-4">
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="card shadow-lg p-4">
                                <h4 class="text-center mb-3">Cobertura Educativa: de la Base a la Cima</h4>
                                <canvas id="coberturaChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card shadow-lg p-4">
                                <h4 class="text-center mb-3">Brecha Digital en el Aula</h4>
                                <canvas id="brechaDigitalChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow-lg p-4 mb-4">
                        <h4 class="text-center mb-3">Vitalidad Cultural</h4>
                        <canvas id="culturaChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="salud-bienestar" role="tabpanel" aria-labelledby="salud-bienestar-tab">
                <div class="row mt-4">
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <div class="card shadow-lg p-4 text-center">
                                <h5>Médicos por 100k hab.</h5>
                                <div class="gauge-chart-container">
                                    <canvas id="medicosGauge"></canvas>
                                    <h2 class="gauge-value"><%= saludBienestar.medicos_por_habitante %></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card shadow-lg p-4 text-center">
                                <h5>Camas de Hospital por 100k hab.</h5>
                                <div class="gauge-chart-container">
                                    <canvas id="camasGauge"></canvas>
                                    <h2 class="gauge-value"><%= saludBienestar.camas_hospital %></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card shadow-lg p-4 text-center">
                                <h5>Mortalidad Materna</h5>
                                <div class="gauge-chart-container">
                                    <canvas id="mortalidadGauge"></canvas>
                                    <h2 class="gauge-value"><%= saludBienestar.mortalidad_materna %></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow-lg p-4 mb-4">
                        <h4 class="text-center mb-3">Indicador de Longevidad</h4>
                        <div class="row align-items-center">
                            <div class="col-md-4 text-center">
                                <h5>Esperanza de Vida</h5>
                                <h1><%= saludBienestar.esperanza_de_vida_al_nacer %> años</h1>
                            </div>
                            <div class="col-md-8">
                                <canvas id="longevidadChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="inclusion-vivienda-seguridad" role="tabpanel" aria-labelledby="inclusion-vivienda-seguridad-tab">
                <div class="row mt-4">
                    <div class="card shadow-lg p-4 mb-4">
                        <h4 class="text-center mb-3">Medidor de Desigualdad y Pobreza</h4>
                        <canvas id="desigualdadPobrezaChart"></canvas>
                    </div>
                    <div class="card shadow-lg p-4 mb-4 text-center">
                        <h4 class="mb-3">Brecha de Género</h4>
                        <div class="d-flex justify-content-center align-items-center gap-4">
                            <div class="text-center">
                                <h1><span class="fs-1">&#x1F468;</span></h1>
                                <h5>$1.00</h5>
                            </div>
                            <div class="text-center">
                                <h1><span class="fs-1">&#x1F469;</span></h1>
                                <h5>$<%= inclusionViviendaSeguridad.brecha_genero_ingreso %></h5>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow-lg p-4 mb-4">
                        <h4 class="text-center mb-3">Barómetro de Seguridad Ciudadana</h4>
                        <canvas id="seguridadChart"></canvas>
                    </div>
                    <div class="card shadow-lg p-4 mb-4">
                        <h4 class="text-center mb-3">Participación Ciudadana</h4>
                        <canvas id="participacionChart" style="max-width: 300px; margin: auto;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Datos desde el servidor (inyectados por EJS)
        const user = <%- typeof user !== 'undefined' ? JSON.stringify(user) : '{}' %>;
        const indicadores = <%- JSON.stringify(indicadores) %>;
        const datosRadar = <%- JSON.stringify(datosRadar) %>;
        const puntosMapa = <%- JSON.stringify(puntosMapa) %>;
        const educacionCultura = <%- JSON.stringify(educacionCultura) %>;
        const saludBienestar = <%- JSON.stringify(saludBienestar) %>;
        const inclusionViviendaSeguridad = <%- JSON.stringify(inclusionViviendaSeguridad) %>;

        // NOTA: Se eliminó el bloque de fetch/API, ya que no se usará.

        // Gráfico Radar (Pestaña Pulso Social)
        const ctxRadar = document.getElementById('radarChart').getContext('2d');
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: datosRadar.map(item => item.label),
                datasets: [{
                    label: 'Campeche',
                    data: datosRadar.map(item => item.valor),
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                scales: {
                    r: {
                        suggestedMin: 0,
                        suggestedMax: 100
                    }
                }
            }
        });
        
        // Mapa (Pestaña Pulso Social)
        const map = L.map('map').setView([19.845, -90.536], 10);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);
        const capas = {};
        puntosMapa.forEach(punto => {
            const marker = L.marker([punto.latitud, punto.longitud]).bindPopup(punto.descripcion);
            if (!capas[punto.tipo]) {
                capas[punto.tipo] = L.layerGroup();
            }
            marker.addTo(capas[punto.tipo]);
        });
        Object.keys(capas).forEach(key => {
            capas[key].addTo(map);
        });
        L.control.layers(null, capas).addTo(map);

        // Evento para inicializar los gráficos de las pestañas al hacer clic
        document.getElementById('educacion-cultura-tab').addEventListener('shown.bs.tab', () => {
            // Gráfico de Cobertura Educativa
            const ctxCobertura = document.getElementById('coberturaChart').getContext('2d');
            new Chart(ctxCobertura, {
                type: 'bar',
                data: {
                    labels: ['Educación Básica', 'Educación Media Superior', 'Titulados Superior (x100k hab.)'],
                    datasets: [{
                        label: 'Cobertura / Tasa',
                        data: [educacionCultura.cobertura_basica, educacionCultura.cobertura_media_superior, educacionCultura.titulacion_superior],
                        backgroundColor: ['rgba(75, 192, 192, 0.6)', 'rgba(255, 99, 132, 0.6)', 'rgba(54, 162, 235, 0.6)'],
                        borderColor: ['rgba(75, 192, 192, 1)', 'rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)'],
                        borderWidth: 1
                    }]
                },
                options: { responsive: true, scales: { y: { beginAtZero: true } } }
            });

            // Gráfico de Brecha Digital en el Aula
            const ctxBrecha = document.getElementById('brechaDigitalChart').getContext('2d');
            const escuelasConInternet = educacionCultura.escuelas_con_internet;
            const escuelasConPcSinInternet = educacionCultura.escuelas_con_pc - escuelasConInternet;
            const escuelasSinPc = 100 - educacionCultura.escuelas_con_pc;
            new Chart(ctxBrecha, {
                type: 'doughnut',
                data: {
                    labels: ['Escuelas con PC', 'Escuelas sin PC'],
                    datasets: [{
                        label: 'Total de Escuelas',
                        data: [educacionCultura.escuelas_con_pc, escuelasSinPc],
                        backgroundColor: ['#4BC0C0', '#FF6384'],
                        borderColor: '#FFFFFF',
                        borderWidth: 2
                    }, {
                        label: 'Escuelas con PC',
                        data: [escuelasConInternet, escuelasConPcSinInternet],
                        backgroundColor: ['#36A2EB', '#FF9F40'],
                        borderColor: '#FFFFFF',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '50%',
                    plugins: {
                        legend: {
                            display: false,
                        },
                        tooltip: {
                            callbacks: {
                                label: (c) => {
                                    if (c.datasetIndex === 0) {
                                        return `Escuelas con PC: ${c.parsed}%`;
                                    } else {
                                        return c.label;
                                    }
                                }
                            }
                        },
                        datalabels: {
                            color: '#212529',
                            font: {
                                weight: 'bold',
                                size: 14,
                            },
                            formatter: (value, context) => {
                                if (context.datasetIndex === 0) {
                                    return `${context.chart.data.labels[context.dataIndex]}: ${value}%`;
                                } else {
                                    if (context.dataIndex === 0) {
                                        return 'Con Internet';
                                    } else {
                                        return 'Sin Internet';
                                    }
                                }
                            },
                        }
                    }
                },
                plugins: [ChartDataLabels]
            });

            // Gráfico de Vitalidad Cultural
            const ctxCultura = document.getElementById('culturaChart').getContext('2d');
            new Chart(ctxCultura, {
                data: {
                    labels: ['Infraestructuras', 'Presupuesto'],
                    datasets: [{
                        type: 'bar',
                        label: 'Infraestructuras (por 100k hab.)',
                        data: [educacionCultura.infraestructuras_culturales],
                        backgroundColor: 'rgba(255, 99, 132, 0.6)', borderColor: 'rgba(255, 99, 132, 1)', borderWidth: 1, yAxisID: 'y'
                    }, {
                        type: 'line',
                        label: 'Presupuesto (%)',
                        data: [educacionCultura.presupuesto_cultura],
                        backgroundColor: 'rgba(54, 162, 235, 0.6)', borderColor: 'rgba(54, 162, 235, 1)', borderWidth: 2, fill: false, yAxisID: 'y1'
                    }]
                },
                options: { responsive: true, scales: { y: { beginAtZero: true, position: 'left', title: { display: true, text: 'Infraestructura' } }, y1: { beginAtZero: true, position: 'right', title: { display: true, text: 'Presupuesto (%)' }, grid: { drawOnChartArea: false } } } }
            });
        });

        document.getElementById('salud-bienestar-tab').addEventListener('shown.bs.tab', () => {
            // Radiografía del Sistema de Salud - Gauges
            const gaugeOptions = (value, max) => ({
                responsive: true,
                rotation: 270,
                circumference: 180,
                plugins: {
                    legend: { display: false },
                    tooltip: { enabled: false }
                }
            });

            const createGauge = (ctx, value, max, color) => {
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        datasets: [{
                            data: [value, max - value],
                            backgroundColor: [color, 'rgba(0, 0, 0, 0.1)'],
                            borderWidth: 0
                        }]
                    },
                    options: gaugeOptions(value, max)
                });
            };

            createGauge(document.getElementById('medicosGauge'), saludBienestar.medicos_por_habitante, 300, 'rgba(75, 192, 192, 1)');
            createGauge(document.getElementById('camasGauge'), saludBienestar.camas_hospital, 150, 'rgba(255, 159, 64, 1)');
            createGauge(document.getElementById('mortalidadGauge'), saludBienestar.mortalidad_materna, 50, 'rgba(255, 99, 132, 1)');
            
            // Indicador de Longevidad
            const ctxLongevidad = document.getElementById('longevidadChart').getContext('2d');
            new Chart(ctxLongevidad, {
                type: 'line',
                data: {
                    labels: ['2021', '2022', '2023', '2024', '2025'],
                    datasets: [{
                        label: 'Esperanza de Vida',
                        data: [75.0, 75.3, 75.5, 75.7, saludBienestar.esperanza_de_vida_al_nacer], // Datos de ejemplo
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        fill: true
                    }]
                },
                options: { responsive: true, plugins: { legend: { display: false } } }
            });
        });

        document.getElementById('inclusion-vivienda-seguridad-tab').addEventListener('shown.bs.tab', () => {
            // Medidor de Desigualdad y Pobreza
            const ctxDesigualdad = document.getElementById('desigualdadPobrezaChart').getContext('2d');
            new Chart(ctxDesigualdad, {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: 'Campeche',
                        data: [{ x: inclusionViviendaSeguridad.coeficiente_gini, y: inclusionViviendaSeguridad.pobreza }],
                        backgroundColor: 'rgba(255, 99, 132, 0.8)',
                        pointRadius: 10
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: { type: 'linear', position: 'bottom', title: { display: true, text: 'Coeficiente de Gini (Desigualdad)' } },
                        y: { type: 'linear', position: 'left', title: { display: true, text: '% de Pobreza' } }
                    }
                }
            });

            // Barómetro de Seguridad Ciudadana
            const ctxSeguridad = document.getElementById('seguridadChart').getContext('2d');
            new Chart(ctxSeguridad, {
                type: 'bar',
                data: {
                    labels: ['Delitos Violentos (x100k hab.)', 'Mortalidad en Tráfico (x100k hab.)', 'Policías (x100k hab.)'],
                    datasets: [{
                        label: 'Índice de Seguridad',
                        data: [inclusionViviendaSeguridad.tasa_delitos_violentos, inclusionViviendaSeguridad.mortalidad_trafico, inclusionViviendaSeguridad.policias],
                        backgroundColor: ['rgba(255, 99, 132, 0.6)', 'rgba(255, 159, 64, 0.6)', 'rgba(75, 192, 192, 0.6)'],
                        borderColor: ['rgba(255, 99, 132, 1)', 'rgba(255, 159, 64, 1)', 'rgba(75, 192, 192, 1)'],
                        borderWidth: 1
                    }]
                },
                options: { responsive: true, indexAxis: 'y', scales: { x: { beginAtZero: true } } }
            });

            // Participación Ciudadana
            const ctxParticipacion = document.getElementById('participacionChart').getContext('2d');
            const participacion = inclusionViviendaSeguridad.participacion_electoral;
            new Chart(ctxParticipacion, {
                type: 'doughnut',
                data: {
                    labels: ['Participación', 'No participación'],
                    datasets: [{
                        data: [participacion, 100 - participacion],
                        backgroundColor: ['rgba(54, 162, 235, 0.8)', 'rgba(201, 203, 207, 0.8)'],
                        borderColor: '#FFFFFF',
                        borderWidth: 2
                    }]
                },
                options: { responsive: true, plugins: { legend: { position: 'bottom' }, title: { display: true, text: `${participacion}%` } } }
            });
        });
    </script>
</body>
<div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-4 shadow mt-4">
    <div class="d-flex gap-3 align-items-center">
        <img src="https://campeche.gob.mx/wp-content/uploads/2023/04/logoh.png" alt="Gobierno de Campeche" class="logo">
        <img src="https://cedyc.campeche.gob.mx/wp-content/uploads/2023/05/Gabinete/curriculum/Logo_cedyc_horizontal.svg" alt="CEDYC" class="logo">
        <img src="https://th.bing.com/th/id/R.70f86f90b79935c5277de32f0cc535a0?rik=vvSvN%2b8aZjkeOA&riu=http%3a%2f%2fsic.gob.mx%2fimages%2f62651&ehk=Dr1LAHN94y5xu2OBSHc0b4%2ftnzTECmGHPSds9ZqT4lY%3d&risl=&pid=ImgRaw&r=0" alt="Tecnológico de Chiná" class="logo">
        <img src="https://extranet.inegi.org.mx/assets/img/Imagen_Institucional/Logos/Logo4.jpg" alt="INEGI" class="logo">
